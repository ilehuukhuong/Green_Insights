@{
    ViewData["Title"] = "Statistic Page";
}
<div class="container">
    <div class="container p-3">
        <div class="row justify-content-end">
            <div class="text-center">
                <h2>Statistics analysis </h2>
            </div>
        </div>
    </div>
    <div class="chart">
        <canvas id="Percentageofideas"></canvas>
    </div>
    <div class="chart1">
        <canvas id="Numberofideas"></canvas>
        <canvas id="Numberofcontributors"></canvas>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="text/javascript">
        $(function () {
            $.ajax({
                type: "POST",
                url: "/Statistic/Percentageofideas",
                data: "",
                contextType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccessResult,
                error: OnError
            });
            function OnSuccessResult(data) {
                var _data = data;
                var _chartLabels = _data[0];
                var _charData = _data[1];
                var barColor = ["red", "green", "yellow", "blue", "brown", "orange", "purple"];
                new Chart("Percentageofideas", {
                    type: 'pie',
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            label: 'Percentage of ideas',
                            data: _charData,
                            //backgroundColor: barColor,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 205, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(201, 203, 207, 0.2)'
                            ],
                            borderColor: [
                                'rgb(255, 99, 132)',
                                'rgb(255, 159, 64)',
                                'rgb(255, 205, 86)',
                                'rgb(75, 192, 192)',
                                'rgb(54, 162, 235)',
                                'rgb(153, 102, 255)',
                                'rgb(201, 203, 207)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        },
                        plugins: {
                            title: {
                                display: true,
                                text: 'Percentage of ideas by each Department'
                            }
                        }
                    }
                });
            }
            function OnError(err) {
                console.log("Something went wrong!");
            }
        });
    </script>
