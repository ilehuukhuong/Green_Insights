@using CollectingIdeas.Models.ViewModel;
@model List<ManageUserRolesVM>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Manage User Roles</h2>
            <hr />
            <h3>Add/Remove Roles for user: @ViewBag.UserName.</h3>
        </div>
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="mb-3">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                <label asp-for="@Model[i].Selected">

                    <input asp-for="@Model[i].Selected" type="checkbox" />
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        <div class="button-group">
            <input type="submit" value="Update" class="btn btn-warning update"/>
            <a asp-controller="Account" asp-action="Index" class="btn btn-dark text-white"><i class='bx bx-arrow-back'></i></a>
        </div>
    </div>
</form>