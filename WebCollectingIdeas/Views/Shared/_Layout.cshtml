<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Green Insights</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Bootswatch.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebCollectingIdeas.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href="https://fonts.googleapis.com/css2?family=Rye&display=swap" rel="stylesheet">
    <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> Green Insights</a>
            </div>
        </nav>
    </header>
    <div class="sidebar">
        <div class="logo_content">
            <div class="logo">
                <div class="logo_brand">
                </div>
            </div>
            <i class='bx bx-menu' id='btn'></i>
        </div>
        @if (User.IsInRole("Administrator") || User.IsInRole("QAManager") || User.IsInRole("QACoordinator") || User.IsInRole("Staff"))
        {
            <div class="src">
                <form asp-controller="Idea" asp-action="Index" method="get" class="searchform">
                    <i class='bx bx-search-alt'></i>
                    <input type="text" name="Searchtext" placeholder="Search topic.." />
                </form>

            </div>
        }
        <ul class="sub-nav">
            <li>
                <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class='bx bx-home-circle'></i>
                    <span class="link_name"> Home</span>
                </a>
            </li>
            @if (User.IsInRole("Administrator") || User.IsInRole("QAManager"))
            {
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Category" asp-action="Index">
                        <i class='bx bx-category-alt'></i>
                        <span class="link_name"> Category</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Administrator") || User.IsInRole("QAManager"))
            {
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Topic" asp-action="Index">
                        <i class='bx bx-news'></i>
                        <span class="link_name">Topic</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Administrator") || User.IsInRole("QAManager") || User.IsInRole("QACoordinator"))
            {
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Statistic" asp-action="Index">
                        <i class='bx bx-stats'></i>
                        <span class="link_name"> Statitics</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Administrator") || User.IsInRole("QAManager") || User.IsInRole("QACoordinator") || User.IsInRole("Staff"))
            {
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Idea" asp-action="Index">
                        <i class='bx bx-brightness'></i>
                        <span class="link_name"> Ideas</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Administrator"))
            {
                <li>
                    <a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Index">
                        <i class='bx bx-git-branch'></i>
                        <span class="link_name"> Department</span>
                    </a>
                </li>
            }
            @if (User.IsInRole("Administrator"))
            {
                <li>
                    <a class="dropdown-item" asp-controller="Account" asp-area="" asp-action="Index">
                        <i class="bi bi-person-fill-gear"></i>
                        <span class="link_name">Manage Account</span>
                    </a>
                </li>
            }
            <partial name="_LoginPartial" />

        </ul>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

