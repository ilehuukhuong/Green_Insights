@model IEnumerable<Comment>
@if (Model != null && Model.Any())
{
    foreach (var obj in Model)
    {
        <div class="comment text-justify">
            @if (obj.isDisplay == false)
            {
                <h4>
                    Anonymous
                </h4>
            }
            else
            {
                <h4>@obj.ApplicationUser.FirstName @obj.ApplicationUser.LastName</h4>
            }
            <h6>@String.Format("{0:MMMM dd, yyyy}", obj.CreateDatetime)</h6>
            <p>@obj.Content</p>
        </div>

    }
}
else
{
    <div class="comment mt-4 text-justify">
        <h4>No Comments</h4>
    </div>
}