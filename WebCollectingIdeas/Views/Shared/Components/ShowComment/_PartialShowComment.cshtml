@model IEnumerable<Comment>
@if (Model != null && Model.Any())
{
    foreach (var obj in Model)
    {
        <div class="comment text-justify">
            @if (obj.ApplicationUser.isDelete == true)
            {
                <div class="user-detail">
                    <img src="/AccountProfile/acc (0).jpg" class="account-avatar-image" />
                    <h5 class="user-name">
                        This account has been blocked
                    </h5>
                </div>
            }
            else
            {
                @if (obj.isDisplay == false)
                {
                    <div class="user-detail">
                        <img src="/AccountProfile/acc (0).jpg" class="account-avatar-image" />
                        <h5 class="user-name">
                            Anonymous
                        </h5>
                    </div>
                }
                else
                {
                    <div class="user-detail">
                        <img src="/@obj.ApplicationUser.Path" class="account-avatar-image" />
                        <h5 class="user-name">@obj.ApplicationUser.FirstName @obj.ApplicationUser.LastName</h5>
                    </div>
                }
            }
            <div class="comment-detail">
                <strong class="cmt-date"><i class='bx bx-calendar'></i>@String.Format("{0:MMMM dd, yyyy}", obj.CreateDatetime)</strong>
                <p class="comment-text"><i class="bi bi-chat-dots"></i>@obj.Content</p>
            </div>
        </div>
        <hr />
    }
}
else
{
    <div class="comment mt-4 text-justify">
        <h4>No Comments</h4>
    </div>
}